pipeline {
    agent any
    stages{
        stage('Clone') {
            steps{
                script{
                    try {
                        echo 'cloning repository'
                    }
                    catch (e) {
                        echo 'Something failed, I should sound the klaxons!'
                        throw e
                    }
                }
            }
        }
        stage('Build') {
            steps{
                script{
                    try {
                        echo 'building'
                    }
                    catch (e) {
                        echo 'Something failed, I should sound the klaxons!'
                        throw e
                    }
                }
            }
        }
        stage('Deploy') {
            steps{
                script{
                    try {
                        echo 'Deploying to $env.GIT_BRANCH'
                    }
                    catch (e) {
                        echo 'Something failed, I should sound the klaxons!'
                        throw e
                    }
                }
            }
        }
    }
}   
